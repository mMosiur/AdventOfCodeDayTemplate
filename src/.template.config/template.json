{
  "$schema": "http://json.schemastore.org/template",
  "author": "mMosiur",
  "classifications": [
    "Console"
  ],
  "name": "Advent of Code Day",
  "identity": "mMosiur.AdventOfCode.DayTemplate",
  "shortName": "aocday",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "DayTemplate",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.git",
        "**/.git/**",
        "**/.gitignore"
      ]
    }
  ],
  "symbols": {
    "year": {
      "type": "parameter"
    },
    "currentYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      }
    },
    "yearWithDefaultCurrentYear": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "year",
        "fallbackVariableName": "currentYear"
      },
      "replaces": "YYYY"
    },
    "DayNumber": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "DAY_NUMBER",
      "parameters": {
        "source": "name",
        "steps": [
          {
            "regex": "[Dd][Aa][Yy]0?",
            "replacement": ""
          }
        ]
      }
    }
  }
}
