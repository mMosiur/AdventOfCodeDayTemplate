{
  "$schema": "http://json.schemastore.org/template",
  "author": "mMosiur",
  "classifications": [
    "Console"
  ],
  "name": "Advent of Code Day",
  "identity": "mMosiur.AdventOfCode.DayTemplate",
  "shortName": "aocday",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "DayXX",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.git",
        "**/.git/**",
        "**/.gitignore"
      ]
    }
  ],
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "year": {
      "type": "parameter"
    },
    "currentYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      }
    },
    "yearWithDefaultCurrentYear": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "year",
        "fallbackVariableName": "currentYear"
      },
      "replaces": "YYYY"
    },
    "DayNumber": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "XX",
      "parameters": {
        "source": "name",
        "steps": [
          {
            "regex": "[Dd][Aa][Yy]0?",
            "replacement": ""
          }
        ]
      }
    }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true,
      "args": {
        "files": [
          "DayXX.csproj"
        ]
      }
    }
  ]
}
